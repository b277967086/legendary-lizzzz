<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="288dp"
        android:layout_height="76dp"
        android:src="@mipmap/signin_dialog_layout_topbg" />

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="330dp"
        android:background="@drawable/signin_dialog_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到成功+198金币"
            android:textColor="#ff703b09"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="227dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/signin_dialog_bg_white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 已连续签到 X/30 天 -"
                android:textColor="#ffff8413"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:textSize="12sp" />

            <com.good.diaodiaode.tebiediao.widget.SignPercentView
                android:id="@+id/spv_progress"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_height="175dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_button"
            android:layout_marginTop="10dp"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="看视频再领      金币"
            android:textColor="#ffffffff"
            android:background="@drawable/signin_dialog_button_bg"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
